<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunilaka.bmicalculator"
    android:versionCode="1"
    android:versionName="1.1.0">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bmi_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bmi_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9889082375891050~4744515203"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".help_menu"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.sunilaka.bmicalculator.HELP_MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".app_info"
            android:parentActivityName=".MainActivity">
        <intent-filter>
            <action android:name="com.sunilaka.bmicalculator.APP_INFO" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>

        <activity android:name=".why_bmi"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.sunilaka.bmicalculator.WHY_BMI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>